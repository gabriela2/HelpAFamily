@model IEnumerable<HelpAFamily.Models.Chat>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SenderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderUsername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverUsername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataRead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MessageSent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SenderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenderUsername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverUsername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataRead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageSent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenderDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Donation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
